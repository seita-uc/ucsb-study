void draw(){
    for(int y = 0; y < imgPortrait.height; y+=10){
        for(int x = 0; x < imgPortrait.width; x+=1){
            weight = adjustWeight(imgPortrait.get(x, y));
            println("weight: ", weight);
            if(weight == 0) {
                continue;
            }
            strokeWeight(weight);
            line(x, y, x+1, y);
        }
    }
}

